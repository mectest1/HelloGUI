<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mec.fx.beans.SayHelloController" spacing="10">
	<Label fx:id="msgLbl" text="FXML is cool!" prefWidth="150"/>
	<Button fx:id="sayHelloBtn" text="Say Hello" onAction="#sayHello"/>
<!-- 	<TextArea fx:id="info" prefWidth="150" prefHeight="50"/> -->
	<TextArea fx:id="info" prefColumnCount="50" prefRowCount="5"/>
	<style>
		-fx-padding: 10;
		-fx-border-style: solid inside;
		-fx-border-width: 2;
		-fx-border-insets: 5;
		-fx-border-radius: 5;
		-fx-border-color: blue;
	</style>
</VBox>

